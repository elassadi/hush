<section class="bg-white dark:bg-gray-900 py-24">
    <div class="container mx-auto px-4">
        <div class="max-w-lg mx-auto">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-semibold text-gray-700 dark:text-gray-200">Kontaktieren Sie uns</h1>
                <p class="text-gray-500 dark:text-gray-400">Wir freuen uns, von Ihnen zu h√∂ren!</p>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-lg dark:bg-gray-800">
                <%= simple_form_for @lead || :lead, url: leads_path, html: { class: 'space-y-6' } do |f| %>

                    <div>
                        <%= f.label :email, 'E-Mail-Adresse', class: 'block mb-2 text-sm text-gray-600 dark:text-gray-400' %>
                        <%= f.input :email, label: false, input_html: {
                            class: 'w-full px-4 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500'
                        } %>
                    </div>

                    <div>
                        <%= f.label :company_name, 'Firmenname', class: 'block mb-2 text-sm text-gray-600 dark:text-gray-400' %>
                        <%= f.input :company_name, label: false, input_html: {
                            class: 'w-full px-4 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500'
                        } %>
                    </div>

                    <div>
                        <%= f.label :phone_number, 'Telefonnummer', class: 'block mb-2 text-sm text-gray-600 dark:text-gray-400' %>
                        <%= f.input :phone_number, label: false, input_html: {
                            class: 'w-full px-4 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500'
                        } %>
                    </div>

                    <div>
                        <%= f.label :message, 'Nachricht', class: 'block mb-2 text-sm text-gray-600 dark:text-gray-400' %>
                        <%= f.input :message, as: :text, label: false, input_html: {
                            rows: 4,
                            class: 'w-full px-4 py-2 border border-gray-300 rounded-md dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:border-teal-500'
                        } %>
                    </div>
                    <div>
                        <%= recaptcha_tags %>
                    </div>

                    <div>
                        <%= f.submit 'Senden', class: 'w-full px-4 py-2 bg-teal-700 text-white font-medium rounded-md hover:bg-teal-800 focus:outline-none focus:ring-4 focus:ring-teal-300' %>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</section>

