<section id="why-waxing" class="wellness-section">
  <h2><%= t('hush.wellness.what_is_waxing.title') %></h2>

  <!-- Editorial Split Layout -->
  <div class="editorial-split">
    <div class="editorial-text">
      <h4 class="benefit-title"><%= t('hush.wellness.what_is_waxing.overview_title') %></h4>
      <p><%= t('hush.wellness.what_is_waxing.intro') %></p>
      <p><%= t('hush.wellness.what_is_waxing.description') %></p>

      <h4 class="benefit-title" style="margin-top: 2rem;"><%= t('hush.wellness.what_is_waxing.how_it_works_title') %></h4>
      <ul>
        <li><%= t('hush.wellness.what_is_waxing.how_it_works_1') %></li>
        <li><%= t('hush.wellness.what_is_waxing.how_it_works_2') %></li>
        <li><%= t('hush.wellness.what_is_waxing.how_it_works_3') %></li>
        <li><%= t('hush.wellness.what_is_waxing.how_it_works_4') %></li>
      </ul>

      <h4 class="benefit-title" style="margin-top: 2rem;"><%= t('hush.wellness.what_is_waxing.hair_length_title') %></h4>
      <p><%= t('hush.wellness.what_is_waxing.hair_length') %></p>
    </div>
    <div class="editorial-image">
      <img src="/images/section-pics/why-waxing1.jpg" alt="<%= t('hush.wellness.why_waxing.professional_treatment_alt') %>" loading="lazy">
    </div>
  </div>

  <article class="article-section" style="margin-top: 4rem;">
    <h3><%= t('hush.wellness.benefits.title') %></h3>

    <div class="editorial-split" style="margin-top: 3rem;">
      <div class="editorial-text">
        <h4 class="benefit-title"><%= t('hush.wellness.benefits.benefit1_title') %></h4>
        <p><%= t('hush.wellness.benefits.benefit1') %></p>

        <h4 class="benefit-title" style="margin-top: 2rem;"><%= t('hush.wellness.benefits.benefit2_title') %></h4>
        <p><%= t('hush.wellness.benefits.benefit2') %></p>

        <h4 class="benefit-title" style="margin-top: 2rem;"><%= t('hush.wellness.benefits.benefit3_title') %></h4>
        <p><%= t('hush.wellness.benefits.benefit3') %></p>
      </div>
      <div class="editorial-image">
        <img src="/images/section-pics/why-waxing3.png" alt="<%= t('hush.wellness.why_waxing.smooth_skin_alt') %>" loading="lazy">
      </div>
    </div>

    <div class="editorial-split" style="margin-top: 3rem;">
      <div class="editorial-image">
        <img src="/images/section-pics/why-waxing4.png" alt="<%= t('hush.wellness.why_waxing.professional_treatment_alt_2') %>" loading="lazy">
      </div>
      <div class="editorial-text">
        <h4 class="benefit-title"><%= t('hush.wellness.benefits.benefit4_title') %></h4>
        <p><%= t('hush.wellness.benefits.benefit4') %></p>

        <h4 class="benefit-title" style="margin-top: 2rem;"><%= t('hush.wellness.benefits.benefit5_title') %></h4>
        <p><%= t('hush.wellness.benefits.benefit5') %></p>
      </div>
    </div>
  </article>
</section>
