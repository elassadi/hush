<!-- Treatment Techniques Section -->
<section id="treatment-techniques" class="wellness-section">
  <h2><%= t('hush.wellness.techniques.title') %></h2>

  <div class="editorial-split" style="margin-top: 3rem;">
    <div class="editorial-text">
      <h3><%= t('hush.wellness.techniques.strip_wax_title') %></h3>
      <p><%= t('hush.wellness.techniques.strip_wax_desc') %></p>
      <p style="margin-top: 1rem;"><strong><%= t('hush.wellness.techniques.benefits_label') %></strong> <%= t('hush.wellness.techniques.strip_wax_benefits') %></p>
      <p style="margin-top: 1rem;"><strong><%= t('hush.wellness.techniques.areas_label') %></strong> <%= t('hush.wellness.techniques.strip_wax_areas') %></p>
    </div>
    <div class="editorial-image">
      <img src="https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?w=600&h=400&fit=crop&q=80" alt="<%= t('hush.wellness.techniques.warm_wax_alt') %>" loading="lazy">
    </div>
  </div>

  <div class="editorial-split" style="margin-top: 3rem;">
    <div class="editorial-image">
      <img src="https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?w=600&h=400&fit=crop&q=80" alt="<%= t('hush.wellness.techniques.hot_wax_alt') %>" loading="lazy">
    </div>
    <div class="editorial-text">
      <h3><%= t('hush.wellness.techniques.hot_wax_title') %></h3>
      <p><%= t('hush.wellness.techniques.hot_wax_desc') %></p>
      <p style="margin-top: 1rem;"><strong><%= t('hush.wellness.techniques.benefits_label') %></strong> <%= t('hush.wellness.techniques.hot_wax_benefits') %></p>
      <p style="margin-top: 1rem;"><strong><%= t('hush.wellness.techniques.areas_label') %></strong> <%= t('hush.wellness.techniques.hot_wax_areas') %></p>
    </div>
  </div>

  <article class="article-section" style="margin-top: 3rem; text-align: center;">
    <p style="max-width: 800px; margin: 0 auto;"><%= t('hush.wellness.techniques.temperature') %></p>
  </article>
</section>
