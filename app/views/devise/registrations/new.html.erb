</header>



<div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
    <div class="container mx-auto">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Bitte melden Sie sich an!</h1>
            </div>

            <div class="m-7">
				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.hidden_field :plan, value: @plan || :basic %>


                    <%# <div class="flex items-center space-x-4">
                        <div class="mb-6">
                            <label for="first_name" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Vorname</label>
                            <input type="email" name="first_name" id="first_name"  class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                        </div>
                        <div class="mb-6">
                            <label for="last_name" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Nachname</label>
                            <input type="email" name="last_name" id="last_name"  class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                        </div>
                    </div> %>
                        <div class="mb-6">
                            <label for="account_name" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Unternehmen</label>
                            <%= f.input(:account_name, label: false,autofocus: true,  :input_html => {
                                completion: 'company',
                                :class => 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500' })%>
                        </div>
                    <div class="mb-6">
                        <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Email Address</label>
                        <%= f.input(:email, label: false,autofocus: true,  :input_html => {
                            completion: 'email',
                            :class => 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500', placeholder: "email@addresse.de"  })%>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <label for="password" class="text-sm text-gray-600 dark:text-gray-400">Passwort</label>
                        </div>

						<%= f.input(:password, label: false,  :input_html => { :class => 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500',
                         completion:'new-password' })%>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <label for="password-confirmation" class="text-sm text-gray-600 dark:text-gray-400">Passwort wiederholen</label>
                        </div>

						<%= f.input(:password_confirmation, label: false,  :input_html => { :class => 'w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500', completion:'new-password' })%>
                    </div>

                    <div class="mb-6">
                        <button type="submit" class="text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:ring-teal-300 font-medium w-full px-3 py-4  rounded-md focus:outline-none">
							Konstenlos registrieren
						</button>
                    </div>
                    <div class="form-group py-2">
                        <div class="custom-checkbox custom-control">
                        <%= f.input :agb, label: false ,required: true,
                            wrapper_html: { class: ("error" if @user.errors[:agb].any?) } do %>
                            <%= f.input_field :agb, value: @user.agb %>

                            <label for="agb" class="custom-control-label text-sm"> Ich stimme hiermit den  <a class="text-teal-700 hover:underline" href="/agb" target="_blank">Nutzungsbedingungen</a> von ReCloud zu.</label>
                        <% end %>

                        </div>
                    </div>

                    <p class="text-sm text-center text-gray-400">Sie haben schon einen Account? <a href="<%=new_user_session_url(subdomain: "app")%>" class="text-teal-700 focus:outline-none focus:underline focus:text-indigo-500 dark:focus:border-indigo-800">anmelden</a>.</p>
                <% end %>
            </div>
        </div>
    </div>
</div>



<%= render "static_pages/footer" %>









