<div class="border rounded m-2 max-h-[250px] overflow-y-auto relative border-gray-300" data-controller="table-field">
  <table class="w-full px-4 bg-white">
    <thead class="bg-white border-b border-gray-200 pb-1 sticky top-0" style="z-index:100">
      <tr>
        <!-- Checkbox Column -->
        <th class="w-10 text-center bg-white">
          <input type="checkbox" name="Alle auswÃ¤hlen" class="mx-3 rounded w-4 h-4 checked:bg-primary-400 focus:checked:!bg-primary-400" data-action="click->table-field#toggleAll" data-table-field-target="headerCheckbox">
        </th>

        <% columns.each do |column| %>
          <th class="<%= column[:class] || 'text-left uppercase px-3 py-3 whitespace-nowrap rounded-l bg-white' %>" data-control="<%= column[:data_control] %>">
            <div class="block w-full text-gray-500 tracking-tight leading-tight text-xs font-semibold">
              <%= column[:header] %>
            </div>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody class="divide-y">
      <% rows.each do |row| %>
        <%= render partial: 'fields/table/row',

        locals: { row: , columns: , field:  } %>
      <% end %>
    </tbody>
  </table>
</div>