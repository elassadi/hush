


<%= render Avo::TurboFrameWrapperComponent.new(params[:turbo_frame]) do %>
  <div class="flex flex-col">
    <%= render Avo::PanelComponent.new(name: '') do |c| %>
      <% c.body do %>
        <div class="relative flex py-5 items-center">
          <div class="flex-grow border-t border-gray-400"></div>
          <span class="flex-shrink mx-4 text-gray-400">Summary</span>
          <div class="flex-grow border-t border-gray-400"></div>
        </div>
        <table class="w-full px-4 bg-white">
          <tbody class="divide-y">
            <%= render  'summary_row', locals: {price:@repair_set.price.to_currency , title: t(:netto_sum, scope: :shared)} %>
            <%= render  'summary_row', locals: {price:@repair_set.price.to_tax_currency , title: t(:tax_sum, scope: :shared)} %>
            <%= render  'summary_row', locals: {price:@repair_set.price.to_brutto.to_currency , title: t(:brutto_sum, scope: :shared) ,bold: true }%>
          </tbody>
        </table>
      <%= turbo_stream_from @repair_set %>
      <% end %>
    <% end %>
  </div>
<% end %>


