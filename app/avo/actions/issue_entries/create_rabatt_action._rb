module IssueEntries
  class CreateRabattAction < ::ApplicationBaseAction
    self.name = "CreateRabatt"

    # test
    self.visible = lambda do
      return false unless view == :show

      current_user.may?(:create_rabatt, resource.model)
    end

    def handle(**args)
      models = args[:models]
      models.each do |model|
        authorize_and_run(:create_rabatt, model) do |issue_entry|
          create_rabatt(issue_entry)
        end
      end
    end

    private

    def create_rabatt(issue_entry)
      IssueEntries::CreateRabattTransaction.call(issue_entry_id: issue_entry.id)
    end
  end
end
