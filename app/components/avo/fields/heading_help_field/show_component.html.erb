<div class="flex items-start py-1 leading-tight bg-gray-100 text-gray-500 text-xs">
  <div class="py-2 px-6 h-full w-full flex
  flex-col flex-grow  leading-tight min-h-14 field-wrapper-layout-inline md:flex-row md:items-center
  ">
    <div class="font-semibold "><%= @field.i18n_name %></div>

    <% if @field.href.present?%>
      <a  href="<%= @field.href %>" target='<%= @field.target %>'>
        <div class="flex flex-row space-x-0  items-center">
          <span data-tippy="<%=@field.i18n_title.present? ? 'tooltip' : '' %>" title="<%= @field.i18n_title %>" class="whitespace-nowrap  text-xs uppercase font-semibold inline-flex items-center px-2 py-1 rounded">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
            </svg>
          </span>
        </div>
      </a>
    <% end %>
  </div>
</div>
