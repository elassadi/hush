name: Build and release


on:
  push:
    tags:
      - 'v*.*.*'

jobs:
  build:
    runs-on: ubuntu-latest
    steps:

    - uses: actions/checkout@v3
      with:
        ref: ${{ github.head_ref }}

    - name: Get short SHA
      id: slug
      run: echo "sha7=$(echo ${GITHUB_SHA} | cut -c1-7)" >> $GITHUB_OUTPUT

    - name: Get release version
      id: release_version
      run: |
        echo "::set-output name=tag::$(sed "s|refs/tags/v||" <<< ${{ github.ref }})"

    - name: Debug
      run: |
        echo " hash ${{ steps.slug.outputs.sha7  }} release_version  ${{  steps.release_version.outputs.tag }} github ref : ${{ github.ref }}  "



    - name: Login to gitHub packages
      uses: docker/login-action@v1
      id: login
      with:
        registry: ghcr.io
        username: ${{ github.actor }}
        password: ${{ secrets.GITHUB_TOKEN }}


    - name: pull image
      id: pull-image
      run: docker pull ghcr.io/${{ github.repository }}:${{ steps.slug.outputs.sha7 }}
      continue-on-error: true # This allows the workflow to continue even if this step fails


    - name: Set up docker buildx
      if: steps.pull-image.outcome == 'failure' # This step only runs if the previous step fails
      uses: docker/setup-buildx-action@v1
      id: buildx
      with:
        install: true

    - name: Build and push docker image
      if: steps.pull-image.outcome == 'failure' # This step only runs if the previous step fails
      uses: docker/build-push-action@v2
      id: build-and-push
      with:
        context: .
        push: true
        tags: ghcr.io/${{ github.repository }}:${{ steps.slug.outputs.sha7 }}
        cache-from: type=gha
        cache-to: type=gha,mode=max

    - name: Tag existing image
      run: docker tag ghcr.io/${{ github.repository }}:${{ steps.slug.outputs.sha7 }} ghcr.io/${{ github.repository }}:${{steps.release_version.outputs.tag}}

    - name: push tag
      run: docker push ghcr.io/${{ github.repository }}:${{steps.release_version.outputs.tag}}



    - name: Call deploy to Production
      uses: actions/github-script@v6
      with:
        github-token: ${{ secrets.ACTIONS_PAT }}
        script: |
          await github.rest.actions.createWorkflowDispatch({
            owner: 'elassadi',
            repo: 'recloud-deployment',
            workflow_id: 'set-image.yml',
            ref: 'main',
            inputs: {"image": "ghcr.io/elassadi/recloud:${{ steps.release_version.outputs.tag }}", environment: 'production'}
          })

  re-run:
    needs: build
    if: failure() && fromJSON(github.run_attempt) < 3
    runs-on: ubuntu-latest
    steps:
      - env:
          GH_REPO: ${{ github.repository }}
          GH_TOKEN: ${{ github.token }}
          GH_DEBUG: api
        run: gh workflow run rerun.yml -F run_id=${{ github.run_id }}





